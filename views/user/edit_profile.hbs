{{> header}} 

      
        {{#if udata}}
            <form class="w-75" method="post" action="/user/update_users" enctype="multipart/form-data">
           
              <input type="hidden" name="_csrf" value="{{crfToken}}"/>
                <input type="hidden" name="_id" value="{{{udata._id}}}" />
                 
                <div class="form-group">
                    <label for="exampleInputEmail1">User Name</label>
                    <input readonly type="email" class="form-control" value="{{udata.username}}" aria-describedby="emailHelp" placeholder="Enter email">   
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">User Email</label>
                    <input readonly type="email" class="form-control" value="{{{udata.email}}}" aria-describedby="emailHelp" placeholder="Enter email">
              
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">User Mobile</label>
                    <input type="text" name="mobile" class="form-control" value="{{udata.mobile}}" aria-describedby="emailHelp" placeholder="Enter email">
               
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Profile</label>
                    <br/>
                    <input type="file" name="myfile">
                </div>
               
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
             {{/if}}
            
         
         
     {{> footer}}